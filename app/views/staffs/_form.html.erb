<div class="container">
  <%= simple_form_for @staff, html: { multipart: true} do |f| %>
    <% if @staff.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger">
     <h2>staff <unsuccessful></unsuccessful>, 
       there is/are <%= pluralize(@staff.errors.count, "error") %>.</h2>
       prevented this staff from saving

         <% @staff.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
  <% end %> 

  <div class="form-group">
  <%= f.input :name, 				input_html: {class: 'form-control'} %>
  <%= f.input :profile_picture, 	as: :file %>
  </div>
  <div class="form-group">	
  <%= f.input :expertise, label: 	 "Expertise",	input_html:  {class: 'col-md-9'} %>
  <%= f.input :description, label: "Description",	input_html:  {class: 'col-md-9'} %>

  <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
  <% end %>
</div>