<div class="container">
<p>
  <strong>Date:</strong>
  <%= @appointment.date.strftime("%B %d") %>
</p>

<p>
  <strong>Time:</strong>
  <%= @appointment.time.strftime("%I %p") %>
</p>

<p>
  <strong>Customer:</strong>
  <%= @appointment.user.first_name %> <%= @appointment.user.last_name %>
</p>
<p>
  <strong>Contact Number:</strong>
  <%= @appointment.user.contactnumber %>
</p>
<%= link_to 'Reschedule', edit_appointment_path(@appointment) %> |
<%= link_to 'Back', appointments_path %>
</div>