<div class="container">
<%= simple_form_for @service, html: { multipart: true} do |f| %>
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
   <h2>service <unsuccessful></unsuccessful>, 
     there is/are <%= pluralize(@service.errors.count, "error") %>.</h2>
     prevented this service from saving

       <% @service.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %> 

<div class="form-group">
<%= f.input :image,   as: :file %>
<%= f.input :name, input_html: {class: 'form-control'} %>


<%= f.input :price, label: "Price",input_html: {class: 'col-md-9'} %>
<br>
 <%= f.collection_select :category_id,  Category.all, :id, :name, {prompt: "Select Category"}, {class: "form-control"} %>
      <br>
<%= f.button :submit, class: 'btn btn-primary' %>
</div>
<% end %>
</div>